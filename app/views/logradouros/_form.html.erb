<%= form_for @ref, :html => { :class => "form-horizontal logradouro" } do |f| %>

  <%= render :partial => '/layouts/message_box' %>

  <div class="form-group">
    <%= f.label :cidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.collection_select(:cidade_id, cidades, :id, :nome, include_blank: "Selecione") %>
    </div>
    <%=f.error_span(:cidade) %>
  </div>

  <div class="form-group">
    <%= f.label :bairro, :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.collection_select(:bairro_id, bairros, :id, :nome, include_blank: "Selecione") %>
    </div>
    <%=f.error_span(:bairro) %>
  </div>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  
  <div class="form-group">
    <%= f.label :cep, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.number_field :cep, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cep) %>
  </div>
  
  <div class="form-group">
    <%= f.label :inicio, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.number_field :inicio, :class => 'form-control' %>
    </div>
    <%=f.error_span(:inicio) %>
  </div>

  <div class="form-group">
    <%= f.label :fim, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.number_field :fim, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fim) %>
  </div>

  <div class="form-group">
    <%= f.label :lado, :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.select("lado", lados, {include_blank: "Selecione"}) %>

    </div>
    <%=f.error_span(:lado) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                logradouros_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
