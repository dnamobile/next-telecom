<%= form_for @ref, :html => { :class => "form-horizontal cidade" } do |f| %>

  <%= render :partial => '/layouts/message_box' %>

  <div class="form-group">
    <%= f.label :estado, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.collection_select(:estado_id, estados, :id, :nome, include_blank: "Selecione") %>
    </div>
    <%= f.error_span(:estado) %>
  </div>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cidades_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>