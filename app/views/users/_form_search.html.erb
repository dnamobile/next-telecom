<%= search_form_for(@q, :class => "form-horizontal user") do |f| %>
  
  <%= hidden_field_tag 'page', '1', {class: 'ransack-page'} %>
  
  <div class="form-group">
    <%= f.label(:nome_cont, "Email", :class => 'control-label col-lg-2') %>
    <div class="col-lg-4">  
      <%= f.search_field(:email_cont, placeholder: 'Email contém...', :class => 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:uf_cont, "Data Criação", :class => 'control-label col-lg-2') %>
    <div class="col-lg-4">  
      <%= f.search_field(:created_at_cont, placeholder: 'Data de criação contém...', :class => 'form-control') %>  
      
      <br/>

      <%= f.submit(:class => 'btn btn-default') %>
      <%= new_button(@model_class) %>
    </div>  
    
  </div>
<% end %>